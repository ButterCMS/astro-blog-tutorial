---
const { title = 'Astro blog' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <title>{title}</title>
  </head>

  <body>
    <slot />
  </body>

</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .wrapper {
    max-width: 1100px;
    margin: 0 auto;
  }

  .tags {
    display: flex;
    gap: 5px;
    margin-top: 5px;
    flex-wrap: wrap;
  }

  .tags span {
    border: 1px solid gainsboro;
    padding: 2px 10px;
    border-radius: 10px;
  }

  .search {
		height: 40px;
		border: 1px solid rgb(186, 187, 189);
		border-radius: 5px;
		margin-top: 20px;
		max-width: 400px;
		display: flex;
    align-items: center;
	}

	.search button {
		border: none;
		background-color: rgb(47,27,89);
		padding: 0 10px;
		cursor: pointer;
    border-radius: 5px;
    margin-right: 5px;
	}

	.search input {
		width: 100%;
		padding: 0 10px;
		border: none;
    border-bottom-left-radius: 10px;
    border-top-left-radius: 10px;
    height: calc(40px - 2px);
	}

	.search input:focus {
		border: none;
		outline: none;
	}

	.search svg {
		width: 25px;
		margin-top: 5px;
    margin-left: 5px;
		color: white;
	}
  
</style>